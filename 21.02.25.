def myFirstFunction(name):
    #print("Sveika," + name + "!")
    print(f"Sveika, {name}!")
    
    
myFirstFunction("Anna")









def sum_numbers(a, b):
    return a + b
    
    
result = sum_numbers(5, 3)
print(result)









def is_even(n):
    if n % 2 == 0:
        print("true")
    else:
        print("false")
    
(is_even(4))
(is_even(7))









def factorial(number):
    result = 1
    for i in range(1, number + 1):
        result *= i
    return result
    
print(factorial(5))










def fizzbuzz(n):
        if n % 3 == 0 and n % 5 == 0:
            print("FizzBuzz")
        elif n % 3 == 0:
            print("Fizz")
        elif n % 5 == 0:
            print("Buzz")
        else:
            print(n)
            
fizzbuzz(15)
